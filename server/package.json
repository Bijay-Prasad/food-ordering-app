{
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon server.js",
    "start": "node server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "start:prod": "npm run start && npm run heroku-postbuild",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "seed:users": "node seeder/usersSeeder.js",
    "seed:foods": "node seeder/foodsSeeder.js",
    "seed:all": "npm run seed:users && npm run seed:foods",
    "data:destroy": "node seeder/destroyData.js",
    "migrate": "node seeder/migrateData.js",
    "reset:db": "npm run data:destroy && npm run migrate",
    "reset": "npm run data:destroy && npm run seed:all",
    "test:auth": "jest --runInBand ./tests/auth.test.js",
    "test:users": "jest --runInBand ./tests/users.test.js",
    "test:foods": "jest --runInBand ./tests/foods.test.js",
    "test:orders": "jest --runInBand ./tests/orders.test.js",
    "test:all": "npm run test:auth && npm run test:users && npm run test:foods && npm run test:orders",
    "coverage": "jest --coverage",
    "watch:tests": "jest --watchAll",
    "test:ci": "jest --runInBand --coverage --ci",
    "precommit": "npm run lint:fix && npm run test:ci",
    "postcommit": "git add .",
    "prepush": "npm run lint && npm run test:ci",
    "postpush": "git push",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d client/build",
    "postdeploy": "echo \"Deployed to gh-pages branch\"",
    "start:gh": "serve -s client/build -l 5000",
    "heroku:deploy": "git push heroku main",
    "postheroku:deploy": "echo \"Deployed to Heroku\"",
    "preheroku:deploy": "npm run heroku-postbuild",
    "lint:staged": "lint-staged",
    "precommit:husky": "npm run lint:fix && npm run test:ci",
    "postcommit:husky": "git add .",
    "prepush:husky": "npm run lint && npm run test:ci",
    "postpush:husky": "git push",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand",
    "test:debug:all": "node --inspect-brk ./node_modules/.bin/jest --runInBand --coverage --ci"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.4"
  }
}
